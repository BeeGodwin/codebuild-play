{
  "name": "codebuild-play",
  "version": "1.0.0",
  "description": "A sandbox for messing around with CodeBuild and related AWS tech",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && webpack --config webpack/prod.js",
    "clean": "rm -rf node_modules && rm -f yarn.lock && yarn install",
    "format": "prettier --write \"src/**/*.js\"",
    "host": "http-server dist",
    "lint": "eslint \"./src/**/*.js\" --quiet",
    "publish": "npm run clean && npm run build && npm run s3:put",
    "s3:put": "node publish/aws-put.js",
    "s3:list": "node publish/aws-list.js",
    "dev": "PHASER_ENV=dev webpack-dev-server --config webpack/base.js",
    "dev:dist": "PHASER_ENV=dev yarn build && yarn host",
    "test": "jest --no-coverage",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.2.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.12.3",
    "jest": "^26.6.3",
    "jest-canvas-mock": "^2.3.0",
    "jsdom": "^16.4.0",
    "mime-types": "^2.1.29",
    "node-dir": "^0.1.17",
    "prettier": "^2.2.1",
    "raw-loader": "^3.1.0",
    "terser-webpack-plugin": "^2.2.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "lodash-es": "^4.17.20",
    "phaser": "^3.50.0"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/test/**/*.js"
    ]
  },
  "repository": "git@github.com:BeeGodwin/codebuild-play.git",
  "author": "Bee Godwin <bee.godwin@bbc.co.uk>",
  "license": "MIT",
  "private": true
}
